{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@store/*": [
        "store/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@atoms/*": [
        "common/atoms/*"
      ],
      "@pages/*": [
        "pages/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "common/global/types/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
